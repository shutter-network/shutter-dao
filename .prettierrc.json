{
    "printWidth": 100,
    "endOfLine": "auto",
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "semi": true,
    "arrowParens": "avoid",
    "singleAttributePerLine": true,
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "tabWidth": 4,
                "printWidth": 80,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": true
            }
        }
    ]
}
